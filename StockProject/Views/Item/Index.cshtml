@model IEnumerable<Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>
<hr />

<a href="@Url.Action("Add")" class="btn btn-success mb-3"> Add New Item </a>

<table class="table table-bordered">
    <tr>
        <td> Id             </td>
        <td> ItemName       </td>
        <td> Quantity       </td>
        <td> Price          </td>
        <td> Store          </td>
        <td>                </td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ItemName</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@item.Store.StoreName</td>
            <td>
                <a asp-action="edit" asp-controller="Item" class="btn btn-success" asp-route-id="@item.Id">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Item" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>


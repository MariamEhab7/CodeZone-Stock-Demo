@model IEnumerable<Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>
<hr />

<a href="@Url.Action("Add")" class="btn btn-dark mb-3"> Add New Item </a>

<table class="table table-bordered">
    <tr>
        <td> Id             </td>
        <td> ItemName       </td>
        <td> Quantity       </td>
        <td> Price          </td>
        <td> Store          </td>
        <td>                </td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ItemName</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@item.Store.StoreName</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class = "btn btn-dark me-3" })

                @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                new { onclick = "return confirm('Are you sure you want to delete this item ?');",  @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
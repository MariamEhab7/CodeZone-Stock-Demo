@model IEnumerable<Store>
@{
    ViewData["Title"] = "Index";
}

<h1>Stores</h1>
<hr/>

<a href="@Url.Action("Add")" class="btn btn-success mb-3"> Add New Store </a>

<table class="table table-bordered">
        <tr>
            <td> StoreId   </td>
            <td> StoreName </td>
            <td> Address   </td>
            <td>           </td>
        </tr>
        @foreach(var item in Model){
            <tr>
                <td>@item.StoreId</td>
                <td>@item.StoreName</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="edit" asp-controller="Store" class="btn btn-success" asp-route-id="@item.StoreId">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Store" class="btn btn-danger" asp-route-id="@item.StoreId">Delete</a>
                </td> 
                <td>
                <a asp-action="Purchase" asp-controller="Store" class="btn btn-success" asp-route-id="@item.StoreId">Purchase</a>
                </td>
            </tr>
        }
    </table>


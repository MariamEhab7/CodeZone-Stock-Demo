@model IEnumerable<Store>
@{
    ViewData["Title"] = "Index";
}

<h1>Stores</h1>
<hr/>

<a href="@Url.Action("Add")" class="btn btn-dark mb-3"> Add New Store </a>

<table class="table table-bordered">
        <tr>
            <td> StoreId   </td>
            <td> StoreName </td>
            <td> Address   </td>
            <td>           </td>
        </tr>
        @foreach(var item in Model){
            <tr>
                <td>@item.StoreId</td>
                <td>@item.StoreName</td>
                <td>@item.Address</td>
                <td>
                    @Html.ActionLink("Edit", "edit", new { id = item.StoreId }, new { @class = "btn btn-dark me-3" })
                    @Html.ActionLink("Purchase", "Purchase", new { id = item.StoreId }, new { @class = "btn btn-dark me-3" })

                    @Html.ActionLink("Delete", "Delete", new { id = item.StoreId },
                    new { onclick = "return confirm('Deleting this Store will delete all its items do you want to continue?');",  
                    @class = "btn btn-danger" })

                </td>
            </tr>
        }
    </table>

